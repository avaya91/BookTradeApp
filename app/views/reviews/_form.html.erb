<%= simple_form_for([@book, @book.reviews.build]) do |f| %>
	<%= f.input :comment %>
	<%= f.input :rating, label: 'Cash Offer($)' %>
	<%= f.input :username, label: 'User Email' %>
	<%= f.input :bookname, label: 'Book you want to trade with' %>
	<%= f.button :submit, 'Send Request', :class => "btn-custom2" %>
	<% end %>