<div class="col-md-6 col-md-offset-3">
<div class="new-book-form">
<h1>Edit Review</h1>

<%= simple_form_for([@book, @review]) do |f| %>
    <%= f.input :username %>
    <%= f.input :bookname %>
	<%= f.input :rating, label: 'Cash Offer($)' %>
	<%= f.input :comment %>
	<%= f.button :submit, :class => "btn-custom2"  %>
<% end %>

</div>
</div>